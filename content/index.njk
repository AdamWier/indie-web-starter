                    <div class="col">
                      <h3>{{reading.title}}</h3>
                      <h4>{{reading.author}}</h4>
                    </div>
                    <div class="col">
                      {% image "https://covers.openlibrary.org/b/id/"+reading.covers[0]+"-M.jpg", "Cover of "+reading.title, [130] %}
                    </div>
                  </div>
                  <p>{{reading.description.value}}</p>
                  <div></div>
                </div>
                <div class="tab-pane fade" id="playing" role="tabpanel">
                  <p>Playing</p>
                </div>
                <div class="tab-pane fade" id="tinkering">
                  <p>TINKERING</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div col="row">
        <div class="col">
          {% include '_includes/articles.njk' %}
          <div class="col"></div>
        </div>
        <div class="row">
          <div class="col text-center">
            <github-badge user="AdamWier" badge="octogeek"></github-badge>
          </div>
        </div>
      </div>
    </div>

